<launch>
  <!-- Launch the grid map simple demo node -->
  <node pkg="uvc_lamp" type="uvc_grid_map" name="uvc_grid_map" output="screen" />
  <!-- Launch the grid map visualizer -->
  <node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen">
    <rosparam command="load" file="$(find uvc_lamp)/config/uvc_grid_map.yaml" />
  </node>
  <!-- Launch RViz with the demo configuration -->
  <node name="rviz2" pkg="rviz" type="rviz" args="-d $(find grid_map_demos)/rviz/grid_map_demo.rviz" />
</launch>
